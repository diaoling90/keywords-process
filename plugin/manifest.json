{
  "manifest_version": 3,
  "name": "Google Trends 关键词收集器",
  "version": "1.0.0",
  "description": "自动收集Google Trends中趋势超过300%的关键词到本地数据库",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "https://trends.google.com/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://trends.google.com/trends/explore*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "关键词收集器",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 